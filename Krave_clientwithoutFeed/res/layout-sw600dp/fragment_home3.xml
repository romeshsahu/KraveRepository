<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <com.ps.utill.CustomScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/new_linear"
            android:background="@color/find_dudes_bacground" >

            <RelativeLayout
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp" >

                <RelativeLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp" >

                    <com.ps.utill.SquareImageView
                        android:id="@+id/viewpager1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" >
                    </com.ps.utill.SquareImageView>

                    <com.ps.utill.SquareImageView
                        android:id="@+id/viewpagerStamp"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/stamp1"
                        android:visibility="gone" >
                    </com.ps.utill.SquareImageView>

                    <LinearLayout
                        android:id="@+id/layout_gallery"
                        android:layout_width="10dp"
                        android:layout_height="85dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/gallery1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/select_notification" />

                        <ImageView
                            android:id="@+id/gallery2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/unselect_notofication" />

                        <ImageView
                            android:id="@+id/gallery3"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/unselect_notofication" />

                        <ImageView
                            android:id="@+id/gallery4"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/unselect_notofication" />

                        <ImageView
                            android:id="@+id/gallery5"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/unselect_notofication" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/swipeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/home2_height"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/cancelSwipe"
                                android:layout_width="@dimen/home2_icon1_60"
                                android:layout_height="@dimen/home2_icon1_60"
                                android:src="@drawable/swipe_cross" />

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="220dp"
                                android:layout_height="120dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/arrow_w" />

                            <ImageView
                                android:id="@+id/doneSwipe"
                                android:layout_width="@dimen/home2_icon1_60"
                                android:layout_height="@dimen/home2_icon1_60"
                                android:src="@drawable/swipe_right" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout4"
                    android:gravity="center|left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/transImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:contentDescription="@null"
                                android:src="@drawable/transit_biking" />

                            <TextView
                                android:id="@+id/transTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/milesAway"
                                android:layout_gravity="right"
                                android:layout_toLeftOf="@+id/transImageView"
                                android:layout_weight="0.35"
                                android:gravity="right"
                                android:text="1 hour"
                                android:textColor="#a0a0a0"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/imageOnOff"
                                android:text="much text | very age"
                                android:textColor="#909090"
                                android:textSize="30sp" />

                            <ImageView
                                android:id="@+id/hideShowImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/arrow_down"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/imageOnOff"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="18dp"
                                android:layout_toLeftOf="@+id/textOnOff"
                                android:textSize="22sp"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/milesAway"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/transImageView"
                                android:layout_gravity="right"
                                android:layout_weight="0.35"
                                android:gravity="right"
                                android:text="2025 miles"
                                android:textColor="#a0a0a0"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/textOnOff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="ONLINE"
                                android:textColor="@color/home2_3_text_color"
                                android:textSize="10sp"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/relationShip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:text="very single"
                                android:textColor="@color/home2_3_text_color"
                                android:textSize="22sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tvLastActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text=""
                                android:textColor="@color/home2_3_text_color" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/whatareyou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="chingchong"
                                android:textColor="@color/home2_3_text_color"
                                android:textSize="22sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Address here, Newyork"
                                android:textColor="@color/home2_3_text_color"
                                android:textSize="22sp"
                                android:visibility="visible" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/hightWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="wow kg"
                            android:textColor="@color/home2_3_text_color"
                            android:textSize="22sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/aboutMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:lines="2"
                            android:paddingTop="20dp"
                            android:text="WOW much details"
                            android:textColor="#BF000000"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/black"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#909090"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/find_dudes_bacground" >

                            <TextView
                                android:id="@+id/tvBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="22sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/find_dudes_bacground" >

                            <TextView
                                android:id="@+id/tvRole"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="22sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/find_dudes_bacground" >

                            <TextView
                                android:id="@+id/tvLoveHook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="22sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/photosLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/setting_and_filter_header_color"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/photosTexView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/home_photos"
                            android:textColor="@color/gray_color_text"
                            android:textSize="22dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/profileDynamicGridLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <org.askerov.dynamicgrid.DynamicGridView
                            android:id="@+id/profileDynamicGrid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/find_dudes_bacground"
                            android:numColumns="3"
                            android:verticalSpacing="0dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/setting_and_filter_header_color"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/sharedInterest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/home_interests"
                            android:textColor="@color/gray_color_text"
                            android:textSize="22dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home3_horizontal_listview_height"
                        android:layout_marginBottom="5dp" >

                        <ImageView
                            android:id="@+id/backimage"
                            android:layout_width="@dimen/home3_arrow_hw"
                            android:layout_height="@dimen/home3_arrow_hw"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/left_aroow"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#e2e2e2" />

                        <com.ps.horizontal_listview.HorizontalListView
                            android:id="@+id/horizontalListView1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp" >
                        </com.ps.horizontal_listview.HorizontalListView>

                        <ImageView
                            android:id="@+id/nimage"
                            android:layout_width="@dimen/home3_arrow_hw"
                            android:layout_height="@dimen/home3_arrow_hw"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/right_arrow"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home3_top_layout_height"
                    android:layout_alignParentTop="true"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="@dimen/home3_cross_icon_height_weight"
                        android:layout_height="@dimen/home3_cross_icon_height_weight"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="100dp"
                        android:src="@drawable/btn_cross" />

                    <!--
                     <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="#f2f2f2" />
                    -->

                    <ImageView
                        android:id="@+id/done"
                        android:layout_width="@dimen/home3_cross_icon_height_weight"
                        android:layout_height="@dimen/home3_cross_icon_height_weight"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="100dp"
                        android:src="@drawable/btn_tick" />
                </RelativeLayout>
            </RelativeLayout>
        </com.ps.utill.CustomScrollView>

        <LinearLayout
            android:id="@+id/new_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home3_top_layout_height"
            android:layout_alignParentBottom="true"
            android:background="#AF272B"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:id="@+id/btn_flag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/detail_btn_block" />

            <Button
                android:id="@+id/btn_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@drawable/av_new_detail_starup" />

            <Button
                android:id="@+id/btn_bubble"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/detail_btn_chat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/loadingView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:src="@drawable/load_new" />

            <TextView
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Loading...."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#707070" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>