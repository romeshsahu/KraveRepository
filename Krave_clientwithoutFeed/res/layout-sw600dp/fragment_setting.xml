<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/find_dudes_bacground"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/clearAllFillterButton" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_and_filter_header_color" >

                    <TextView
                        android:id="@+id/textViewLookingFor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/filter_looking_for"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_filter_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/check_box_filter_by_looking_for"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@null"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/filter_checkbox_up" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearBodyLookingFor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linearBodyLoveHookup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/find_dudes_bacground"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <RelativeLayout
                            android:id="@+id/rlLove"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/profile_looking_for_height"
                            android:layout_marginBottom="1dp"
                            android:layout_marginRight="0.5dp"
                            android:layout_weight="1"
                            android:background="#f14546" >

                            <TextView
                                android:id="@+id/tvLove"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/filter_love"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/profile_looking_for_fontsize" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlHookup"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/profile_looking_for_height"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="0.5dp"
                            android:layout_weight="1"
                            android:background="#51ccd8" >

                            <TextView
                                android:id="@+id/tvHookup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/filter_fun"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/profile_looking_for_fontsize" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/filter"
                        android:layout_width="@dimen/home_icon_widht"
                        android:layout_height="@dimen/home_icon_height"
                        android:background="@drawable/btn_offline" />

                    <TextView
                        android:id="@+id/textView100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/home_text_margin_left"
                        android:text="Online "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/gray_color_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_and_filter_header_color" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/filter_filter_by_age"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_filter_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/check_box_filter_by_age"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@null"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/filter_checkbox_up" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearBodyAge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/year1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="20 Year Old"
                            android:textColor="@color/gray_color_text"
                            android:textSize="@dimen/fragment_setting_text_size" />

                        <TextView
                            android:id="@+id/year2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="50 Year Old"
                            android:textColor="@color/gray_color_text"
                            android:textSize="@dimen/fragment_setting_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/seekbar2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_and_filter_header_color" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/filter_filter_by_radius"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_filter_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/check_box_filter_by_radius"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@null"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/filter_checkbox_up" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearBodyRadius"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/miles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="20 Year Old"
                            android:textColor="@color/gray_color_text"
                            android:textSize="@dimen/fragment_setting_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:indeterminate="false"
                            android:progress="50"
                            android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
                            android:thumb="@drawable/apptheme_btn_radio_on_holo_light" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#e2e2e2" />

            <LinearLayout
                android:id="@+id/layoutHorizontallist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_and_filter_header_color" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/filter_filter_by_ethnicity"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_filter_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/check_box_filter_by_ethnicity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@null"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/filter_checkbox_up" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearBodyEthnicity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <com.ps.horizontal_listview.MyGridView
                        android:id="@+id/ethinicity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="3"
                        android:stretchMode="columnWidth" >
                    </com.ps.horizontal_listview.MyGridView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#e2e2e2" />

            <LinearLayout
                android:id="@+id/layoutRoleList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_and_filter_header_color" >

                    <TextView
                        android:id="@+id/textViewRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/filter_filter_by_role"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_filter_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/check_box_filter_by_role"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@null"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/filter_checkbox_up" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearBodyRole"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <com.ps.horizontal_listview.MyGridView
                        android:id="@+id/role"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"
                        android:numColumns="3"
                        android:stretchMode="columnWidth" >
                    </com.ps.horizontal_listview.MyGridView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#e2e2e2" />

            <LinearLayout
                android:id="@+id/layoutHorizontallist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_and_filter_header_color" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/filter_filter_by_interest"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_filter_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/check_box_filter_by_interest"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@null"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/filter_checkbox_up" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearBodyInterest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <com.ps.horizontal_listview.MyGridView
                        android:id="@+id/interestList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="3"
                        android:stretchMode="columnWidth" >
                    </com.ps.horizontal_listview.MyGridView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#e2e2e2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_and_filter_header_color" >

                    <TextView
                        android:id="@+id/textViewBodyType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/filter_filter_by_body_type"
                        android:textColor="@color/gray_color_text"
                        android:textSize="@dimen/fragment_filter_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/check_box_filter_by_body_type"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@null"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/filter_checkbox_up" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearBodyBodyType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_body_type_height"
                        android:background="#e2e2e2"
                        android:orientation="horizontal"
                        android:weightSum="4" >

                        <RelativeLayout
                            android:id="@+id/rlBodySlim"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/profile_body_type_height"
                            android:layout_weight="1"
                            android:background="@color/find_dudes_bacground" >

                            <ImageView
                                android:id="@+id/ivBodySlim"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/av_bodytype_slim_up" />

                            <TextView
                                android:id="@+id/tvBodySlim"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="@string/filter_slim"
                                android:textColor="#e2e2e2" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlBodyMed"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/profile_body_type_height"
                            android:layout_weight="1"
                            android:background="@color/find_dudes_bacground" >

                            <ImageView
                                android:id="@+id/ivBodyMed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/av_bodytype_medium_up" />

                            <TextView
                                android:id="@+id/tvBodyMed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="@string/filter_medium"
                                android:textColor="#e2e2e2" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlBodyAth"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/profile_body_type_height"
                            android:layout_weight="1"
                            android:background="@color/find_dudes_bacground" >

                            <ImageView
                                android:id="@+id/ivBodyAth"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/av_bodytype_athletic_up" />

                            <TextView
                                android:id="@+id/tvBodyAth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="@string/filter_athletic"
                                android:textColor="#e2e2e2" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlBodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/profile_body_type_height"
                            android:layout_weight="1"
                            android:background="@color/find_dudes_bacground" >

                            <ImageView
                                android:id="@+id/ivBodyLarge"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/av_bodytype_large_up" />

                            <TextView
                                android:id="@+id/tvBodyLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="@string/filter_large"
                                android:textColor="#e2e2e2" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#e2e2e2" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/clearAllFillterButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/registration_icon_submit_height"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ll3"
        android:layout_marginTop="@dimen/profile_submit_margin"
        android:background="@drawable/dialog_gallery_button_orange_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/filter_clear_all"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/ll3"
        android:background="#e2e2e2" />

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/footer"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <ImageView
                android:id="@+id/notification"
                android:layout_width="@dimen/notification_icon_h_w"
                android:layout_height="@dimen/notification_icon_h_w"
                android:layout_gravity="center_vertical"
                android:src="@drawable/unselect_notofication" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Enable Notification"
                android:textColor="@color/gray_color_text"
                android:textSize="@dimen/fragment_setting_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/reminder"
                android:layout_width="@dimen/notification_icon_h_w"
                android:layout_height="@dimen/notification_icon_h_w"
                android:layout_gravity="center_vertical"
                android:src="@drawable/unselect_notofication" />

            <TextView
                android:id="@+id/textView87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Enable GPS Reminder"
                android:textColor="@color/gray_color_text"
                android:textSize="@dimen/fragment_setting_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/updateInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/av_new_setting_updateinfo_up"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Update Info"
                android:textColor="@color/gray_color_text"
                android:textSize="@dimen/fragment_setting_text_size_button"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/av_new_setting_changepw_up"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/change_password"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Change Password"
                android:textColor="@color/gray_color_text"
                android:textSize="@dimen/fragment_setting_text_size_button"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/av_new_setting_del_up"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/delete_account"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Delete Account"
                android:textColor="@color/gray_color_text"
                android:textSize="@dimen/fragment_setting_text_size_button"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/loadingView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/load_new" />

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Loading...."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#707070" />
    </LinearLayout>

</RelativeLayout>