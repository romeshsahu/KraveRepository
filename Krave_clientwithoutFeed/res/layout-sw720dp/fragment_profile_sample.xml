<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submitButton5"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/image_h_w"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_profile_image_top_layout_h"
            android:orientation="vertical"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3" >

                <FrameLayout
                    android:id="@+id/profileImage1FrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/fragment_profile_image_bottom_margin"
                    android:layout_marginLeft="@dimen/registration_icon5_margin"
                    android:layout_marginRight="@dimen/registration_icon5_margin"
                    android:layout_marginTop="@dimen/registration_icon5_margin"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/profileImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image2996"
                        android:padding="@dimen/registration_icon5_padding"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/profileImage1StampImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/registration_icon5_padding"
                        android:scaleType="fitXY"
                        android:src="@drawable/stamp"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@+id/profileImage2FrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/fragment_profile_image_bottom_margin"
                        android:layout_marginLeft="@dimen/registration_icon5_margin"
                        android:layout_marginRight="@dimen/registration_icon5_margin"
                        android:layout_marginTop="@dimen/registration_icon5_margin"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/profileImage2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image2996"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/profileImage2StampImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitXY"
                            android:src="@drawable/stamp"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/profileImage3FrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/fragment_profile_image_bottom_margin"
                        android:layout_marginLeft="@dimen/registration_icon5_margin"
                        android:layout_marginRight="@dimen/registration_icon5_margin"
                        android:layout_marginTop="@dimen/fragment_profile_image_bottom_margin"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/profileImage3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image2996"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/profileImage3StampImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitXY"
                            android:src="@drawable/stamp"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@+id/profileImage4FrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/fragment_profile_image_bottom_margin"
                        android:layout_marginLeft="@dimen/registration_icon5_margin"
                        android:layout_marginRight="@dimen/registration_icon5_margin"
                        android:layout_marginTop="@dimen/fragment_profile_image_bottom_margin" >

                        <ImageView
                            android:id="@+id/profileImage4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image2996"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/profileImage4StampImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitXY"
                            android:src="@drawable/stamp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@+id/profileImage5FrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/fragment_profile_image_bottom_margin"
                        android:layout_marginLeft="@dimen/registration_icon5_margin"
                        android:layout_marginRight="@dimen/registration_icon5_margin"
                        android:layout_marginTop="@dimen/fragment_profile_image_bottom_margin" >

                        <ImageView
                            android:id="@+id/profileImage5StampImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image2996"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/profileImage5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitXY"
                            android:src="@drawable/stamp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@+id/profileImage6FrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/fragment_profile_image_bottom_margin"
                        android:layout_marginLeft="@dimen/registration_icon5_margin"
                        android:layout_marginRight="@dimen/registration_icon5_margin"
                        android:layout_marginTop="@dimen/fragment_profile_image_bottom_margin" >

                        <ImageView
                            android:id="@+id/profileImage6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image2996"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/profileImage6StampImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/registration_icon5_padding"
                            android:scaleType="fitXY"
                            android:src="@drawable/stamp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="@dimen/registration_icon5_margin"
        android:layout_marginRight="@dimen/registration_icon5_margin"
        android:layout_marginTop="@dimen/fragment_profile_image_bottom_margin"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/aboutMe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_profile_about_edit_text_h"
            android:background="@drawable/about_me_profile"
            android:ems="10"
            android:focusable="false"
            android:gravity="top|left"
            android:hint="About me (xxx characters)"
            android:imeOptions="actionDone"
            android:maxLength="100"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/interestTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest"
                android:textColor="@color/gray_color_text"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/backimage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/left_aroow" />

                <com.ps.horizontal_listview.HorizontalListView
                    android:id="@+id/horizontalListView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/nextimage"
                    android:layout_toRightOf="@+id/backimage" >
                </com.ps.horizontal_listview.HorizontalListView>

                <ImageView
                    android:id="@+id/nextimage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facebookLikeIntegrationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/facebookLikeIntegration"
                android:layout_width="@dimen/registration_icon4_width"
                android:layout_height="@dimen/registration_icon4_height"
                android:background="@drawable/uncheck" >
            </ImageView>

            <TextView
                android:id="@+id/facebookLikeIntegration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/registration_layout4_margin_left"
                android:text="Enable Facebook Likes "
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cc000000"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/cancleLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cancleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cancelsf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/delete_image" />

            <TextView
                android:id="@+id/deleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Delete Picture"
                android:textColor="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/congratulationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/addPictureTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Add picture"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/gallery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="@dimen/home2_margin2222_left"
                android:layout_marginRight="@dimen/home2_margin2222_right"
                android:layout_marginTop="@dimen/home2_margin2222_top"
                android:background="@drawable/gallery"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/gallery"
                android:layout_marginLeft="@dimen/home2_margin2222_left"
                android:layout_marginRight="@dimen/home2_margin2222_right"
                android:layout_marginTop="@dimen/home2_margin2222_top"
                android:background="@drawable/take_a_picture"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>