<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/welcome_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/login_icon_width"
            android:layout_height="@dimen/login_icon_height"
            android:src="@drawable/login_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_top_layout_height"
                android:layout_marginLeft="@dimen/login_top_layout_margin_left"
                android:layout_marginRight="@dimen/login_top_layout_margin_right"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/userNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/transfield"
                    android:drawableLeft="@drawable/ico_user"
                    android:hint="Email"
                    android:inputType="text"
                    android:paddingLeft="@dimen/login_edittext_padding_left"
                    android:paddingRight="20dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_top_layout_height"
                android:layout_marginLeft="@dimen/login_top_layout_margin_left"
                android:layout_marginRight="@dimen/login_top_layout_margin_right"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/transfield"
                    android:drawableLeft="@drawable/ico_lock"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/login_edittext_padding_left"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ui_comp_margin"
                android:layout_marginLeft="@dimen/login_top_layout_margin_left"
                android:layout_marginRight="@dimen/login_top_layout_margin_right"
                android:layout_marginTop="@dimen/ui_comp_margin"
                android:gravity="center|left"
                 >

                <ImageView
                    android:id="@+id/rememberMe"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:src="@drawable/remember_un_checked" />

                <TextView
                    android:id="@+id/rememberMeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Remember Me"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/signInButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_icon1_height"
                android:layout_marginLeft="@dimen/login_top_layout_margin_left"
                android:layout_marginRight="@dimen/login_top_layout_margin_right"
                android:layout_marginTop="@dimen/ui_comp_margin"
                android:background="@drawable/login" />

            <ImageButton
                android:id="@+id/connectWithFbButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_icon1_height"
                android:layout_marginLeft="@dimen/login_top_layout_margin_left"
                android:layout_marginRight="@dimen/login_top_layout_margin_right"
                android:layout_marginTop="@dimen/ui_comp_margin"
                android:background="@drawable/btnfbconnect" />

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/login_text_margin"
                android:gravity="center"
                android:text="Forgot your password?"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_view_height"
                android:background="#626262" />

            <ImageButton
                android:id="@+id/registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/login_text_margin"
                android:gravity="center"
                android:text="Create an account"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>