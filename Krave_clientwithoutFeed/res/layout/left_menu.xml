<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/left_menu_top_layout_width"
    android:layout_height="match_parent"
    android:background="#414042"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_profile" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/findDudes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_find_guys" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_find_guys"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/searchCity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_search_city" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_search_city"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/dailyKrave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_daily_krave" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_daily_krave"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/chatMatches"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_favotite" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_favorites"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/nightlife_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_find_guys" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_nightlife_finder"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/imageRequest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_notification" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_notifications"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_setting" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_settings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/contactUs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu_contact_us" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_contact_us"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/left_menu_icon_width"
            android:layout_height="@dimen/left_menu_icon_height"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:scaleType="fitXY"
            android:src="@drawable/menu_logout" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_menu_icon_layout_margin_left"
            android:text="@string/leftpanel_logout"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="@dimen/left_menu_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#525252" />

    <LinearLayout
        android:id="@+id/visits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center|left"
        android:visibility="invisible" >
    </LinearLayout>

    <TextView
        android:id="@+id/tvVersionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="5dp"
        android:text="v1.0.0 b1"
        android:textColor="#e2e2e2" />

</LinearLayout>