<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/find_dudes_bacground"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar" >

        <Button
            android:id="@+id/backButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/av_new_chat_backup"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Krave Premium"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/upgrade_account_title_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_below="@+id/titleBar"
        android:background="@color/gray_color_text"
        android:gravity="center" >

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPGRADE TO PAID TODAY!"
            android:textColor="@color/black"
            android:textSize="@dimen/upgrade_account_title_text_size" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLayout"
        android:layout_below="@+id/titleLayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/upgrade_header_hw"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/upgrade_account_image_icon_hw"
                    android:layout_height="@dimen/upgrade_account_image_icon_hw"
                    android:layout_margin="10dp"
                    android:background="@color/gray_color_text"
                    android:padding="5dp"
                    android:src="@drawable/musculous_black" />

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:gravity="left|center"
                        android:text="Hot Features, Hot Guys \nNo limits, view more guys in Find Guys!"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="@dimen/upgrade_account_subtitle_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home2_3_text_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/upgrade_header_hw"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/upgrade_account_image_icon_hw"
                    android:layout_height="@dimen/upgrade_account_image_icon_hw"
                    android:layout_margin="10dp"
                    android:background="@color/gray_color_text"
                    android:padding="5dp"
                    android:src="@drawable/front_black" />

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:gravity="left|center"
                        android:text="No ads, only nearby businesses!"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="@dimen/upgrade_account_subtitle_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home2_3_text_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/upgrade_header_hw"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/upgrade_account_image_icon_hw"
                    android:layout_height="@dimen/upgrade_account_image_icon_hw"
                    android:layout_margin="10dp"
                    android:background="@color/gray_color_text"
                    android:padding="5dp"
                    android:src="@drawable/magnifying_glass_black" />

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:gravity="left|center"
                        android:text="Search by city for anywhere in the world"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="@dimen/upgrade_account_subtitle_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home2_3_text_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/upgrade_header_hw"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/upgrade_account_image_icon_hw"
                    android:layout_height="@dimen/upgrade_account_image_icon_hw"
                    android:layout_margin="10dp"
                    android:background="@color/gray_color_text"
                    android:padding="5dp"
                    android:src="@drawable/movie_black" />

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:gravity="left|center"
                        android:text="Send private videos in chat"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="@dimen/upgrade_account_subtitle_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home2_3_text_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/upgrade_header_hw"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/upgrade_account_image_icon_hw"
                    android:layout_height="@dimen/upgrade_account_image_icon_hw"
                    android:layout_margin="10dp"
                    android:background="@color/gray_color_text"
                    android:padding="5dp"
                    android:src="@drawable/camera_black" />

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:gravity="left|center"
                        android:text="Up to 20 private or public photos for your profile!"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="@dimen/upgrade_account_subtitle_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home2_3_text_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/upgrade_header_hw"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/upgrade_account_image_icon_hw"
                    android:layout_height="@dimen/upgrade_account_image_icon_hw"
                    android:layout_margin="10dp"
                    android:background="@color/gray_color_text"
                    android:padding="5dp"
                    android:src="@drawable/money_black" />

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:gravity="left|center"
                        android:text="lowest price ever!"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="@dimen/upgrade_account_subtitle_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home2_3_text_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/upgrade_header_hw"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/upgrade_account_image_icon_hw"
                    android:layout_height="@dimen/upgrade_account_image_icon_hw"
                    android:layout_margin="10dp"
                    android:background="@color/gray_color_text"
                    android:padding="5dp"
                    android:src="@drawable/camera_black" />

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:gravity="left|center"
                        android:text="see more private photos with premium"
                        android:textColor="@color/home2_3_text_color"
                        android:textSize="@dimen/upgrade_account_subtitle_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home2_3_text_color" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp" >

        <Button
            android:id="@+id/upgrade_button"
            style="@style/button_footer_text_view_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_gallery_button_orange_selector"
            android:padding="10dp"
            android:text="UPGRADE NOW!"
            android:textSize="@dimen/upgrade_account_title_text_size" />
    </LinearLayout>

</RelativeLayout>