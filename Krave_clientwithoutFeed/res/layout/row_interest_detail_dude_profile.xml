<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp" >

        <RelativeLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#909090"
            android:gravity="center"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp" >

            <com.ps.utill.CircleImageView
                android:id="@+id/itemImageView"
                android:layout_width="@dimen/row_detail_dude_profile_interest_w"
                android:layout_height="@dimen/row_detail_dude_profile_interest_h"
                android:layout_centerInParent="true"
                android:background="@color/black"
                android:scaleType="fitCenter" >
            </com.ps.utill.CircleImageView>

            <ImageView
                android:id="@+id/circle"
                android:layout_width="@dimen/row_detail_dude_profile_interest_circl_h"
                android:layout_height="@dimen/row_detail_dude_profile_interest_circl_w"
                android:layout_centerInParent="true"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:visibility="gone" >
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>